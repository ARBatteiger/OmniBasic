; Dimension Variablesdim obc1 as obcommdim raedit as raeditdim timer1 as timerdim tempstr as string*1000dim cd as string*1dim tempint as longOBMain.CREATEtimer1.interval=10setposition OBMain,0,0,1000,700construct raedit,0,0,1000,600obc1.portname="COM1"obc1.baudrate=9600obc1.parity=NOPARITYobc1.databits=8obc1.stopbits=ONESTOPBITobc1.openEND EVENTtimer1.timertempint=obc1.statusif tempint=0 then	returnendifcd=obc1.inputtempstr=tempstr+cdif len(tempstr)<140 then	raedit.text=tempstrelse	timer1.stopendifend event