; Dimension Variablesdim dt1 as DATETIMEdim dt2 as DATETIMEdim dt3 as DATETIMEdim dt4 as DATETIMEdim l1 as statictextdim l2 as statictextdim l3 as statictextdim l4 as statictextdim b1 as buttondim cal1 as calendardim x as longdim ts as stringdim ts2 as stringdim ts3 as stringdim ds1 as stringdim timer1 as timerdim ti as longOBMain.CREATEcreate l1,10,10,100,20create l2,10,40,100,20create l3,10,70,100,20create l4,150,10,120,20create b1,280,10,40,20l4.backcolor=$ffffcreate cal1,150,50,180,160cal1.titlebackcolor=$ffts2="ddd',' MMM dd yy"ts3="hh':'mm':'ss tt"gosub getseedtimer1.time=1000END EVENTtimer1.timeoutdt3=dt1getdatetime dt2x=timediff(dt2,dt1)l1.text=hex(x)timeadd dt3,xGetDateFormat dt3,ts2,tsl2.text=tsGetTimeFormat dt3,ts3,tsl3.text=tsend eventgetseed:dt1.wYear=2002dt1.wMonth=1dt1.wDayOfWeek=0dt1.wDay=1dt1.wHour=0dt1.wMinute=0dt1.wSecond=0dt1.wMilliseconds=0returnl4.commandcal1.getselection dt4GetDateFormat dt4,ts2,ds1l4.text=ds1end eventcal1.changecal1.getselection dt4GetDateFormat dt4,ts2,ds1l4.text=ds1end eventb1.commandcal1.setselection dt1end event