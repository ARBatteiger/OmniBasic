; Dimension Variablesdim dp as drawprogressdim x as longDIM LF1 AS LOGFONTDIM Font1 AS FONTOBMain.CREATEconstruct dp,10,10,100,100;,visible+child;+red+greenLF1.lfHeight=8LF1.lfFaceName="MS Sans Serif"CreateFont Font1,LF1dp.font=Font1dp.maxvalue=100dp.backcolor=$c0c0c0x=dp.backcolordp.backcolor=xx=0Timer1.interval=100END EVENTTimer1.Timerx=x+5if x>100 then	Timer1.stop	returnendifdp.value=xdp.text=str(x)END EVENT