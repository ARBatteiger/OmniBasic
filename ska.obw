MENU.COMMAND
select case MenuID
	case menuopen
		gosub uncheck
		TempStr="Open"
		StaticText1.text=TempStr
		checkmenuitem pervis,menuopen
	case menusave
		gosub uncheck
		TempStr="Save"
		StaticText1.text=TempStr
		checkmenuitem pervis,menusave
	case menuexit
		gosub uncheck
		TempStr="Exit"
		StaticText1.text=TempStr
		checkmenuitem pervis,menuexit
	case bgred
		gosub clrframe1
		RadioButton1.checked=true
		GOSUB RadioButton1_command
	case bggreen
		gosub clrframe1
		RadioButton2.checked=true
		GOSUB RadioButton2_command
	case bgblue
