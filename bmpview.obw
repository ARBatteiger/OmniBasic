; Dimension VariablesDIM FileFilter AS TEXTDIM FileName AS STRINGDIM Bitmap AS BITMAPDIM Image AS IMAGEDIM ViewButton AS BUTTONDIM InitDir AS STRINGOBMain.CREATESETPOSITION OBMain,100,100,400,400OBMain.TEXT="Bitmap Viewer"CONSTRUCT ViewButton,10,10,370,20ViewButton.TEXT="View"CONSTRUCT Image,10,40,380,340FileFilter="Bitmap",0,"*.bmp",0,0InitDir="C:\"END EVENTViewButton.COMMANDOPENDIALOG FileName,FileFilter,InitDirIF STATUS<>0 THEN	LOADBITMAP Bitmap,FileName	Image.BITMAP=BitmapENDIFEND EVENT