; Dimension VariablesDIM FileFilter AS TEXTDIM FileName AS STRINGDIM Bitmap AS BITMAPDIM Image AS IMAGEDIM ViewButton AS BUTTONDIM InitDir AS STRINGOBMain.CREATESET POSITION OBMain,100,100,400,400OBMain.TEXT="Image Viewer"CREATE ViewButton,10,10,370,20ViewButton.TEXT="Select Image"CREATE Image,10,40,380,340FileFilter="Bitmap",0,"*.bmp",0,"GIF",0,"*.gif",0,"JPG",0,"*.jpg",0,"WMF",0,"*.wmf",0,0InitDir="C:\"END EVENTViewButton.COMMANDOPENDIALOG FileName,FileFilter,InitDirIF STATUS<>0 THEN	LOAD Bitmap,FileName	Image.BITMAP=BitmapEND IFEND EVENT