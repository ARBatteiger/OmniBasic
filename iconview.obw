; Dimension VariablesDIM FileFilter AS TEXTDIM FileName AS STRINGDIM Icon AS ICONDIM Image AS ICONBUTTONDIM ViewButton AS BUTTONDIM InitDir AS STRINGOBMain.CREATESETPOSITION OBMain,100,100,400,400OBMain.TEXT="Bitmap Viewer"CONSTRUCT ViewButton,10,10,370,20ViewButton.TEXT="View"CONSTRUCT Image,10,40,200,200,default+flatFileFilter="Icon",0,"*.ico",0,0InitDir=""END EVENTViewButton.COMMANDOPENDIALOG FileName,FileFilter,InitDirIF STATUS<>0 THEN	LOADICON Icon,FileName	Image.ICON=IconENDIFEND EVENT